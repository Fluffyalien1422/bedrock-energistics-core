{
  "$schema": "https://raw.githubusercontent.com/Bedrock-OSS/regolith-schemas/main/config/v1.4.json",
  "author": "Fluffyalien",
  "name": "bedrock_energistics_core",
  "packs": {
    "behaviorPack": "./packs/BP",
    "resourcePack": "./packs/RP"
  },
  "regolith": {
    "formatVersion": "1.4.0",
    "dataPath": "./packs/data",
    "filterDefinitions": {
      "build_scripts": {
        "runWith": "shell",
        "command": "npx esbuild BP/scripts/index.ts --outfile=BP/scripts/__bundle.js --bundle --format=esm --log-level=warning --preserve-symlinks --external:@minecraft/server --external:@minecraft/server-* --external:@minecraft/common --external:@minecraft/diagnostics"
      },
      "prod_finish_up_build_scripts": {
        "runWith": "shell",
        "command": "npx terser BP/scripts/__bundle.js --module -cmo BP/scripts/__bundle.js; Remove-Item BP/scripts/* -Recurse -Exclude __bundle.js"
      },
      "gen_ui_bars": {
        "runWith": "nodejs",
        "script": "scripts/filters/gen_ui_bars.ts"
      }
    },
    "profiles": {
      "default": {
        "export": {
          "target": "development",
          "build": "standard"
        },
        "filters": [
          {
            "filter": "build_scripts"
          },
          {
            "filter": "gen_ui_bars"
          }
        ]
      },
      "preview": {
        "export": {
          "target": "development",
          "build": "preview"
        },
        "filters": [
          {
            "profile": "default"
          }
        ]
      },
      "prod": {
        "export": {
          "target": "local"
        },
        "filters": [
          {
            "profile": "default"
          },
          {
            "filter": "prod_finish_up_build_scripts"
          }
        ]
      }
    }
  }
}
