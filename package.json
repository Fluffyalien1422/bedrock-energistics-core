{
  "private": true,
  "name": "bedrock-energistics-core",
  "type": "module",
  "scripts": {
    "fmt": "prettier . -w",
    "check-tsc": "tsc && tsc -p scripts && tsc -p public_api --noEmit",
    "check-eslint": "eslint .",
    "check-typedoc": "typedoc --emit none --treatWarningsAsErrors",
    "check": "npm run check-tsc && npm run check-eslint && npm run check-typedoc",
    "tsx": "tsx",
    "docs": "typedoc"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@minecraft/server": "1.18.0",
    "@minecraft/server-ui": "1.3.0",
    "@minecraft/vanilla-data": ">=1.21.70",
    "esbuild": "^0.25.1",
    "eslint": "^9.23.0",
    "prettier": "^3.5.3",
    "terser": "^5.39.0",
    "tsx": "^4.19.3",
    "typedoc": "^0.28.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  },
  "dependencies": {
    "@minecraft/math": "^1.5.2",
    "mcbe-addon-ipc": "^0.8.1"
  }
}
