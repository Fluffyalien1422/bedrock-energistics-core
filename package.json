{
  "private": true,
  "type": "module",
  "scripts": {
    "fmt": "prettier . -w",
    "check": "tsc && tsc -p scripts && tsc -p public_api && eslint .",
    "fmt-check": "npm run fmt && npm run check",
    "tsx": "tsx",
    "gen-cfpost": "tsx scripts/gen_cfpost",
    "build-public-api": "tsc -p public_api --noEmit false --emitDeclarationOnly && esbuild public_api/src/index.ts --outfile=public_api/dist/index.js --bundle --format=esm --external:@minecraft/common --external:@minecraft/debug-utilities --external:@minecraft/server --external:@minecraft/server-*",
    "gen-docs": "typedoc --tsconfig public_api/tsconfig.json --out public_api/docs --name \"Bedrock Energistics Core API\" public_api/src"
  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@minecraft/server": "1.14.0-beta.1.21.20-preview.21",
    "@minecraft/server-ui": "1.3.0-beta.1.21.20-preview.21",
    "@types/eslint__js": "^8.42.3",
    "esbuild": "^0.21.5",
    "eslint": "^9.5.0",
    "prettier": "^3.3.2",
    "terser": "^5.31.1",
    "tsx": "^4.15.7",
    "typedoc": "^0.26.3",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.14.1"
  },
  "dependencies": {
    "@minecraft/math": "^1.3.5"
  }
}
